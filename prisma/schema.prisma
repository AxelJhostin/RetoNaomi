// prisma/schema.prisma

enum OrderStatus {
  OPEN
  COOKING
  READY
  DELIVERED
  CLOSED
  CANCELED
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Ahora representa la "Cuenta del Restaurante" o "Tenant"
model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- Login del Dueño (para el Dashboard) ---
  email     String   @unique
  password  String
  name      String?  // Nombre del dueño

  // --- Login del Negocio (Puerta 1) ---
  businessUsername String @unique // El usuario del restaurante
  businessPassword String // La contraseña del restaurante

  // --- Datos de Configuración del Restaurante ---
  restaurantName    String?
  restaurantAddress String?
  taxId             String?
  taxRate           Float    @default(0.12)
  serviceChargeRate Float    @default(0.10)

  // --- Relaciones: Un Restaurante (User) tiene muchos... ---
  products  Product[]
  staff     Staff[]   @relation("StaffMembers")
  tables    Table[]
}

model Invoice {
  id            String   @id @default(cuid())
  invoiceNumber String   @unique // Ej: "F-2025-0001"
  createdAt     DateTime @default(now())

  // Relación uno a uno con la orden que la generó
  orderId       String   
  order         Order    @relation(fields: [orderId], references: [id])

  // La "fotografía" inmutable de la venta en formato JSON
  invoiceData   Json
}

// MODELO PARA LOS ROLES DEL PERSONAL
model Role {
  id        String   @id @default(cuid())
  name      String   @unique // Ej: "Mesero", "Cocinero", "Admin"
  createdAt DateTime @default(now())
  staff     Staff[]
}

// MODELO PARA LOS PRODUCTOS DEL MENÚ
model Product {
  id          String    @id @default(cuid())
  name        String
  description String?
  price       Float
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relación: Un producto pertenece a un usuario (dueño)
  ownerId     String
  owner       User      @relation(fields: [ownerId], references: [id])
  orderItems OrderItem[]
  modifierGroups ModifierGroup[]
}

// MODELO PARA EL PERSONAL (MESEROS, COCINEROS)
model Staff {
  id        String   @id @default(cuid())
  name      String
  pin       String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relación: Un miembro del personal pertenece a un restaurante (dueño)
  ownerId   String
  owner     User     @relation("StaffMembers", fields: [ownerId], references: [id])

  // Relación: Un miembro del personal tiene un rol
  roleId    String
  role      Role     @relation(fields: [roleId], references: [id])
  orders    Order[] 
  @@unique([ownerId, pin])
}

enum TableStatus {
  AVAILABLE
  OCCUPIED
  BILLING
}

model Table {
  id        String      @id @default(cuid())
  name      String      // ej: "Mesa 5", "Terraza 1"
  status    TableStatus @default(AVAILABLE)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relación: Una mesa pertenece a un restaurante (dueño)
  ownerId   String
  owner     User        @relation(fields: [ownerId], references: [id])

  orders    Order[] 

}

model Order {
  id        String      @id @default(cuid())
  status    OrderStatus @default(OPEN) // OPEN, CLOSED, CANCELED
  total     Float       @default(0)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relaciones
  tableId   String
  table     Table       @relation(fields: [tableId], references: [id])
  staffId   String
  staff     Staff       @relation(fields: [staffId], references: [id])
  items     OrderItem[]
  invoice   Invoice[]
}

model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int
  price     Float    // Precio al momento de la venta
  selectedModifiers  Json?
  notes    String?
  createdAt DateTime @default(now())

  // Relaciones
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade) // <-- AÑADE onDelete: Cascade
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}

// GRUPOS DE MODIFICADORES (Ej: "Añadir Extras", "Elige tu salsa")
model ModifierGroup {
  id        String           @id @default(cuid())
  name      String           // "Añadir Extras"
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  // Relación: Un grupo pertenece a un producto
  productId String
  product   Product          @relation(fields: [productId], references: [id], onDelete: Cascade)

  // Relación: Un grupo tiene muchas opciones
  options   ModifierOption[]
}

// OPCIONES DENTRO DE UN GRUPO (Ej: "Queso Extra", "Salsa BBQ")
model ModifierOption {
  id        String   @id @default(cuid())
  name      String   // "Queso Extra"
  price     Float    // +0.50 (puede ser 0 si no tiene costo extra)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relación: Una opción pertenece a un grupo de modificadores
  groupId   String
  group     ModifierGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
}

// MODELO PARA LAS CATEGORÍAS DE PRODUCTOS
model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  createdAt DateTime  @default(now())

  // Relación: Una categoría puede tener muchos productos
  products  Product[]
}